<h1>Application Settings</h1>

<% form_for :settings, :url => {:action => 'update'} do |f| %>
	<table>
	<% Settings.all.each do |setting, val| %>
		<tr>
		<td>
			<label><%= setting.humanize %></label>
		</td>
		<td>
			<%= text_field_tag "settings[#{setting}]", val, :size => 30 %>
		</td>
		</tr>
	<% end %>
	</table>
	<%= submit_tag "Change Settings" %>
<% end %>