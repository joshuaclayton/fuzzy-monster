<% content :full do %>
  <% form_for :user do |form| %>
    <% fieldset "Enter Account Information" do %>
      <% set do %>
        <%= form.label :email_address %>
        <%= form.text_field :email_address %>
      <% end %>
    <% end %>
    <% fieldset "Form Actions", :actions do %>
      <%= form.submit "Submit" %>
    <% end %>
  <% end %>
  <%= link_to "Login", login_path %>
<% end %>