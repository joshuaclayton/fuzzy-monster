<% content do %>
  <% form_for :user do |form| -%>
    <% fieldset "Log In" do %>
      <% set do %>
        <%= form.label :email_address %>
        <%= form.text_field :email_address, :class => "title" %>
      <% end %>
      <% set do %>
        <%= form.label :password %>
        <%= form.password_field :password, :class => "title" %>
      <% end %>
      <% set :checkbox do %>
        <%= form.label :remember_me %>
        <%= check_box_tag :remember_me %>
      <% end %>
    <% end %>
    <% fieldset "Form Actions", :actions do %>
      <%= form.submit "Login" %>
    <% end %>
  <% end -%>
<% end %>
<% extra_content do %>
  <% section "Options" do %>
    <ul>
      <%= tab "Forgot your username or password?", reminder_path %>
      <%= tab "Need an account?", signup_path %>
    </ul>
  <% end %>
<% end %>