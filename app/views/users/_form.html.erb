<% fieldset "Account Information" do %>
  <% set do %>
    <%= form.label :email_address %>
    <%= form.text_field :email_address, :class => "title" %>
  <% end %>
  <% set do %>
    <%= form.label :password %>
    <%= form.password_field :password, :class => "title" %>
  <% end %>
  <% set do %>
    <%= form.label :password_confirmation, "Confirm Password" %>
    <%= form.password_field :password_confirmation, :class => "title" %>
  <% end %>
  <% set do %>
    <%= form.label :time_zone %>
    <%= form.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
  <% end %>
<% end %>