<% sub_header do %>Sign Up for an Account<% end %>
<% content :full do %>
  <%= error_messages_for :user %>
  <% form_for :user do |form| %>
    <%= render :partial => "users/form", :locals => {:form => form} %>
    <% fieldset "Form Actions", :actions do %>
      <%= form.submit "Signup" %>
    <% end %>
  <% end -%>

  <%= link_to "Login", login_path %>
<% end %>