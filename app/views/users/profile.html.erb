<% sub_header do %>Edit Your Account<% end %>
<% content :full do %>
  <%= error_messages_for :user %>

  <% form_for :user, current_user, :html => { :method => :put } do |form| %>
    <%= render :partial => "users/form", :locals => {:form => form} %>
    <% fieldset "Form Actions", :actions do %>
      <%= form.submit "Update" %>
    <% end %>
  <% end %>
<% end %>