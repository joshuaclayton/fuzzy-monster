<% sub_header do %>Forums<% end %>
<% content do %>
  <% column :full, :id => "forums-recordset" do %>
    <%= render :partial => "forums/recordset", :locals => {:forums => @forums} %>
  <% end %>
<% end %>
<% extra_content do %>
  <% section "Add a Forum", @forums.can_be_created_by_current_user? do %>
    <ul>
      <%= tab "Add a Forum", new_forum_path %>
    </ul>
  <% end %>
<% end %>