<% sub_header do %>Forums<% end %>
<% content do %>
  <% recordset :headers => ["Forum", "Information"] do %>
    <tbody>
      <% @forums.each do |forum| %>
        <% zebra_row do %>
          <td><%= link_to forum.name, forum %></td>
          <td></td>
        <% end %>
      <% end %>
    </tbody>
  <% end %>
<% end %>
<% extra_content do %>
  <% section "Add a Forum", @forums.can_be_created_by_current_user? do %>
    <ul>
      <%= tab "Add a Forum", new_forum_path %>
    </ul>
  <% end %>
<% end %>