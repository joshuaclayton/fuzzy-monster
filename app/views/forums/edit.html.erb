<% sub_header do %>Editing <%= @forum.name %><% end %>
<% content :full do %>
  <% form_for @forum do |form| %>
    <% fieldset "Forum Information" do %>
      <%= render :partial => "forums/form", :locals => {:form => form} %>
    <% end %>
    <% fieldset "Form Actions", :actions do %>
      <%= form.submit "Update Forum" %> or <%= cancel_link :back %>
    <% end %>
  <% end %>
<% end %>