<% recordset(:headers => ["Topic", "Views", "Posts"]) do %>
  <tbody>
    <% topics.each do |topic| %>
      <% zebra_row do %>
        <td<%= " class='sticky'" if topic.sticky? %>><%= "Sticky: " if topic.sticky? %><%= link_to topic.title, [forum, topic] %></td>
        <td><%= topic.hits %></td>
        <td></td>
      <% end %>
    <% end %>
  </tbody>
<% end %>
