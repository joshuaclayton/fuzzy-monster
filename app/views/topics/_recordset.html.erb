<% recordset(:headers => ["Topic", "Views", "Posts", "Last Post"]) do %>
  <tbody>
    <% topics.each do |topic| %>
      <% zebra_row do %>
        <td<%= " class='sticky'" if topic.sticky? %>><%= "Sticky: " if topic.sticky? %><%= link_to topic.title, [forum, topic] %></td>
        <td><%= topic.hits %></td>
        <td><%= topic.posts_count %></td>
        <td><%= distance_of_time_in_words_to_now(topic.last_updated_at) %> ago by <%= topic.last_user.full_name %> (<%= link_to "view", polymorphic_path([topic.forum, topic], :anchor => dom_id(topic)) %>)</td>
      <% end %>
    <% end %>
  </tbody>
<% end %>
